{
  "extends": "@adaliszk/typescript",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~snapshots/*": [
        "./snapshots/*"
      ]
    }
  },
  "include": [
    "vite*.ts",
    "src/**/*.tsx",
    "src/**/*"
  ]
}
